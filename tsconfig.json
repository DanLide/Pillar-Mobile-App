// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "assets": ["assets/*"],
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    /* Completeness */
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */
    "types": ["node", "jest"]
  }
}
